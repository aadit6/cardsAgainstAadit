<%- include("partials/accountHeader") %>

<div id="errors">
    <% if (error) { %>
      <div class="alert alert-danger d-flex align-items-center" role="alert">
          <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
          <div>
              <%- error %>
          </div>
      </div>
    <% } %>
    <!-- error message if failure to login -->
</div>

<div class="container">
    <h1 class="display-1" style="margin: 10px; text-align: center; color: #000000;"><b>Register</b></h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <a class="btn btn-block btn-social btn-google custom-google-btn" href="/auth/google" role="button">
                        <i class="fab fa-google"></i> Sign Up with Google
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class = "card-body">
                    <form action="/signup" method="post">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="UserEmail" name="email" placeholder="Email">
                            <label for="UserEmail" class="form-label">Email address</label>
                            <div class="form-text">Must be a valid Email Address.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="UserUsername" name="username" placeholder="Username">
                            <label for="UserUsername" class="form-label">Username</label>
                            <div class="form-text">Username must not contain any special characters</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="UserPassword" name="password" placeholder="Password">
                            <label for="UserPassword" class="form-label">Password</label>
                            <div class="form-text">
                            Your password must be a minimum of 10 characters long and contain at least one capital letter, number and special character
                            </div>
                        </div>
                        <input class="btn btn-primary" type="submit" value="Register">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-4">
            <a href="/signin" role="button" class="btn btn-primary btn-lg btn-block">Back to Login</a>
        </div>
    </div>
</div>

</body>
<head>
    <link rel="stylesheet" href="./account.css"></link>
    <link rel="stylesheet" href="./bootstrap-social.css"></link>


</head>
</html>